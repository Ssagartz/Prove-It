<?xml version="1.0"?>

<!-- MathML-to-SVG configuration file -->
<config verbose="true">
    <!-- Fallback font family -->
    <fallback family="STIXGeneral"/> 
    
    <!-- Default values for MathML properties. -->
    <!-- Most of these are defined in the MathML Rec - change with care -->
    <defaults displaystyle="false"
              mathsize="16pt"
              scriptminsize="8pt"
              scriptsizemultiplier="0.71"
              veryverythinmathspace="0.0555556em"
              verythinmathspace="0.111111em"
              thinmathspace="0.166667em"
              mediummathspace="0.222222em"
              thickmathspace="0.277778em"
              verythickmathspace="0.333333em"
              veryverythickmathspace="0.388889em"
              rowspacing="1.0ex"
              columnspacing="0.8em"
              framespacing="0.4em 0.5ex"/>

    <!-- Additional styling for individual operators -->
    <!-- Make differentials italic -->
    <operator-style operator="&#x2145;" fontstyle="italic"/>
    <operator-style operator="&#x2146;" fontstyle="italic"/>
    
    <!-- Font families -->
    <family name="STIXGeneral">
         <font ttf="fonts/STIXGeneral.ttf"/>
         <font weight="bold" ttf="fonts/STIXGeneralBol.ttf"/>
         <font style="italic" ttf="fonts/STIXGeneralItalic.ttf"/>
         <font weight="bold" style="italic" ttf="fonts/STIXGeneralBolIta.ttf"/>
    </family>

    <family name="STIXDoubleStruck">
         <font ttf="fonts/STIXMathJax_DoubleStruck-Regular.ttf"/>
         <font weight="bold" ttf="fonts/STIXMathJax_DoubleStruck-Bold.ttf"/>
         <font style="italic" ttf="fonts/STIXMathJax_DoubleStruck-Italic.ttf"/>
         <font weight="bold" style="italic" ttf="fonts/STIXMathJax_DoubleStruck-BoldItalic.ttf"/>
    </family>

    <!-- Math variant definitions -->
    <!-- Serif -->
    <mathvariant name="normal"
                 family="STIXGeneral"/>
    <mathvariant name="bold"
                 family="STIXGeneral" weight="bold"/>
    <mathvariant name="italic"
                 family="STIXGeneral" style="italic"/>
    <mathvariant name="bold-italic"
                 family="STIXGeneral" weight="bold" style="italic"/>


    <mathvariant name="double-struck"
		 family="STIXDoubleStruck"/>
    <mathvariant name="bold-double-struck"
		 family="STIXDoubleStruck" weight="bold"/>
    <mathvariant name="double-struck-italic"
		 family="STIXDoubleStruck" style="italic"/>
    <mathvariant name="double-struck-bold-italic"
		 family="STIXDoubleStruck" weight="bold" style="italic"/>

</config>
